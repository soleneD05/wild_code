{"nbformat":4,"nbformat_minor":0,"metadata":{"colab":{"provenance":[],"authorship_tag":"ABX9TyNeS2uOCTQJmp5Mx/y940aW"},"kernelspec":{"name":"python3","display_name":"Python 3"},"language_info":{"name":"python"}},"cells":[{"cell_type":"code","source":["import sys\n","import re\n","from math import log\n","\n","\n","def segmente(ligne):\n","    t1 = re.split(r\"(\\W)\", ligne)\n","    t2 = [token for token in t1 if re.search(r\"[^ ]\", token)]\n","    for i in range(0, len(t2)):\n","        if t2[i] == \"'\" and i > 0 and re.search(r\"\\w$\", t2[i-1]):\n","            t2[i-1] += \"'\"\n","            t2[i] = \"\"\n","        elif t2[i] == \"-\" and i < len(t2) - 1:\n","            if t2[i+1].lower() in (\n","                \"ce\", \"elle\", \"elles\", \"en\", \"il\", \"ils\", \"je\", \"la\",\n","                \"le\", \"leur\", \"les\", \"lui\", \"moi\", \"m\", \"nous\", \"on\",\n","                \"toi\", \"tu\", \"t\", \"vous\", \"y\"\n","            ):\n","                t2[i] = \"-\" + t2[i+1]\n","                t2[i+1] = \"\"\n","            elif i > 0:\n","                t2[i-1] = t2[i-1] + \"-\" + t2[i+1]\n","                t2[i] = \"\"\n","                t2[i+1] = \"\"\n","    t3 = [token for token in t2 if token != \"\"]\n","    return t3\n","\n","\n","def freq(t3):\n","    freqTok = dict()\n","    for x in t3:\n","        freqTok[x] = freqTok.get(x, 0) + 1\n","    return freqTok\n","\n","\n","def cooc(t3, TailleFenetre):\n","    freqCooc = dict()\n","    for i in range(0, len(t3)):\n","        for d in range(1, TailleFenetre + 1):\n","            if i + d < len(t3):\n","                paire = (t3[i], t3[i + d])\n","                freqCooc[paire] = freqCooc.get(paire, 0) + 1\n","    return freqCooc\n","\n","\n","def infomut(freqCooc, freqTok, t3, seuil=5):\n","    infoMut = dict()\n","    for paire in freqCooc:\n","        if freqCooc[paire] > seuil:\n","            infoMut[paire] = log(\n","                len(t3) * freqCooc[paire] / (\n","                    freqTok[paire[0]] * freqTok[paire[1]]\n","                ), 2\n","            )\n","    return infoMut\n","\n","\n","def affiche(infoMut):\n","    for paire in sorted(infoMut, key=infoMut.get, reverse=True):\n","        print(\" \".join(paire), round(infoMut[paire], 2), sep='\\t')\n","    return\n","\n","\n","tokens = []\n","for ligne in sys.stdin:\n","    ligne = ligne.rstrip(\"\\n\")\n","    tokens.extend(segmente(ligne))\n","\n","freqTok = freq(tokens)\n","freqCooc = cooc(tokens, 4)\n","IM = infomut(freqCooc, freqTok, tokens, seuil=5)\n","affiche(IM)"],"metadata":{"id":"YhoyA5OvoBTo"},"execution_count":null,"outputs":[]}]}